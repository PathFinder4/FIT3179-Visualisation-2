{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "US Crime Statistics by State 1975-2015",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/PathFinder4/FIT3179-Visualisation-2/main/js/state.json",
    "format": {"type": "topojson", "feature": "cb_2018_us_state_20m"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://github.com/PathFinder4/FIT3179-Visualisation-2/blob/main/data/1975-2015-crime.csvQ"
        },
        "key": "agency_state",
        "fields": ["assaults"]
      }
    },
    {"calculate": "datum.assaults + 0.1", "as": "Assault Cases"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Assaults Cases",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "agency_state"},
      {"field": "assaults", "type": "quantitative"}
    ]
  }
}
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Violent Crime Cases by State in the US (1975-2015)",
    "width": 750,
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/PathFinder4/FIT3179-Visualisation-2/main/js/state.json",
        "format": {
            "type": "topojson",
            "feature": "cb_2018_us_state_20m"
        }
    },
    "projection": {
        "type": "albers"
    },
    "params": [
                {
                    "name": "yearfilter",
                    "value": 2015,
                    "bind": {
                        "input": "range",
                        "min": 1975,
                        "max": 2015,
                        "step": 1,
                        "name": "Select the Year: "
                    }
                }
                ],
    "layer": [
        {   
            
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightyellow",
                "stroke": "black"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {   
            "transform": [
                {
                    
                    "lookup": "properties.STUSPS",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/PathFinder4/FIT3179-Visualisation-2/main/data/overViewData.csv"
                        },
                        "key": "agency_state",
                        "fields": [
                            "reportyear",
                            "assaults_percapita",
                            "crimes_percapita",
                            "homicides_percapita",
                            "rapes_percapita",
                            "robberies_percapita"
                        ]
                
                    }
                },
                
                {
                    "calculate": "datum.crimes_percapita",
                    "as": "Violent Crime Cases"
                }
                ,{"filter" : "datum.reportyear == yearfilter"}
            ],
            
            "mark": {
                "type": "geoshape",
                "stroke": "black"
            },
            "encoding": {
                "color": {
                    "field": "crimes_percapita",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            600,
                            800,
                            1000
                        ],
                        "range": [
                            "#fdbe85",
                            "#fd8d3c",
                            "#e6550d",
                            "#a63603"
                        ]
                    },
                    "legend":{"title":"Crimes per capita"}
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field":"reportyear",
                        "type":"quantitative",
                        "title":"Year"

                    },
                    {
                        "field": "crimes_percapita",
                        "type": "quantitative",
                        "title": "Crimes per capita"
                    },
                    {
                        "field": "assaults_percapita",
                        "type": "quantitative",
                        "title": "Assaults per capita"
                    },
                    {
                        "field": "homicides_percapita",
                        "type": "quantitative",
                        "title": "Homocides per capita"
                    },
                    {
                        "field": "rapes_percapita",
                        "type": "quantitative",
                        "title": "Rapes per capita"
                    },
                    {
                        "field": "robberies_percapita",
                        "type": "quantitative",
                        "title": "Robberies per capita"
                    }
                ]
            }
        }
    ],
    "config": {}
}